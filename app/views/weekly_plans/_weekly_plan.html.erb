<div id="<%= dom_id weekly_plan %>">

  <p>
    <strong>שבוע:</strong>
    <%= weekly_plan.week_number %>
  </p>
  <%= form_for(weekly_plan) do |form| %>

    <%= weekly_plan.shift_data %>
  <%= render partial: 'shift', locals:{weekly_plan: weekly_plan,i: 0, time_range: weekly_plan.first_shift_time, name: 'משמרת בוקר' ,number_of_volunteers: weekly_plan.first_shift_number_of_volunteers, number_of_days: 5}%>
  <%= render partial: 'shift', locals:{weekly_plan: weekly_plan,i: 126 ,time_range: weekly_plan.second_shift_time, name: 'משמרת ערב', number_of_volunteers: weekly_plan.second_shift_number_of_volunteers, number_of_days: 4}%>

<div style='padding-top:20px'>
   <%= link_to 'שבוע קודם' , weekly_plan_path(id: "#{Date.today.year}-#{weekly_plan.week_number - 1}")%>
    <%= form.submit "עדכן תוכנית" ,style: 'font-size:20px'%>
   <%= link_to 'שבוע הבא' , weekly_plan_path(id: "#{Date.today.year}-#{weekly_plan.week_number + 1}")%>
  </div>
<% end %>

</div>
