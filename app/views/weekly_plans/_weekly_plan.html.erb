<div id="<%= dom_id weekly_plan %>">

  <p>
    <strong>שבוע:</strong>
    <%= weekly_plan.week_number %>
  </p>
  <%= form_for(weekly_plan) do |form| %>

  <%days = %w(ראשון שני שלישי רביעי חמישי שישי) %>
  <%timeframe = %w(10 12 14 16 18 19) %>
  <p dir='rtl'>
   <table dir='rtl' id='plan'>
    <tr>
    <td> שעות </td>
    <%(0..4).each do |vol| %>
      <td><%= days[vol] %> <%= (@weekly_plan.sunday_of_cweek + vol.days).strftime("%d/%m")%></td>
      <td>שם מתנדב</td>
    <%end %>
    </tr>
    <% i = 0 %>
    <tr>
           <td rowspan=7> 10:30-14:30 </td>
</tr>
     <% (1..6).each do |day| %>

     <tr>
       <%(1..5).each do |vol| %>
         <% i += 1 %>
         
         <td colspan=2 style="border:1px solid gray">
         מתנדב <%= day%>
         <input  type='text' name="weekly_plan[data][]" value='<%= weekly_plan.data[i - 1] || nil %>'/> </td>
       <%end %>
     </tr>
     <% end %>
   </table>
   <br/>
   <%= link_to 'שבוע קודם' , weekly_plan_path(id: "#{Date.today.year}-#{weekly_plan.week_number - 1}")%>
    <%= form.submit "עדכן תוכנית" ,style: 'font-size:20px'%>
   
   <%= link_to 'שבוע הבא' , weekly_plan_path(id: "#{Date.today.year}-#{weekly_plan.week_number + 1}")%>
<% end %>

</div>
